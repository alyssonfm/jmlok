<project name="Tests Compiler" default="compile_tests" basedir="..">
	<target name="copy_TestUnitDLL">
				<echo>
					Copy of DLL needed to Unit Test generation made on Tests folder.
				</echo>
						<copy file="${DLL_toCopy}" todir="${dir_target}"/>
	</target>
	
	<target name="copy_BinFile" depends="copy_TestUnitDLL">
				<echo>
					Copy of DLL for Unit Testing made on Tests folder.
				</echo>
						<copy file="${DirBin_toCopy}\${name_project}.exe" todir="${dir_target}"/>
	</target>
	
	<target name="compile_tests" depends="copy_BinFile">
		<echo>
			Compiling tests with csc.
		</echo>
			<exec command="csc">
				<arg value="/target:library"/>
				<arg value="/r:${dir_target}\Microsoft.VisualStudio.QualityTools.UnitTestFramework.dll;${dir_target}\${name_project}.exe"/>
				<arg value="/out:${dir_target}\RandoopTestSuite.dll"/>
				<arg file="${dir_target}\*.cs"/>
			</exec>
	</target>
	
</project>